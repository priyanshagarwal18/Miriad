<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NewTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/newThemeColorPrimary</item>
        <item name="colorAccent">@color/newThemeColorAccent</item>
        <item name="colorPrimaryDark">@color/newThemeColorPrimaryDark</item>
    </style>
    <style name="Theme.Miriad" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="colorPrimary">@color/Primary_Color1</item>
    <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    <item name="colorPrimaryDark">@color/Primary_Color2</item>
    <item name="android:textColorPrimary">@color/Background_Color2</item>
    <item name="colorAccent">@color/Primary_Color1</item>
    </style>
    <style name="TextAppearance.Miriad.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="TextAppearance.Miriad.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/lightGrey</item>
    </style>
    <style name="Widget.Miriad.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="TextAppearance.Miriad.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Widget.Miriad.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/newThemeColorPrimary</item>
        <item name="android:theme">?theme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Miriad.Toolbar</item>
    </style>
    <style name="Widget.Miriad.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/shr_next_button_state_list_anim
        </item>
    </style>
     <style name="Widget.Miriad.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Miriad.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Miriad.TextInputLayout.HintText</item>
                <item name="hintTextColor">@color/lightGrey</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="boxStrokeColor">@color/lightGrey</item>


    </style>
</resources>
