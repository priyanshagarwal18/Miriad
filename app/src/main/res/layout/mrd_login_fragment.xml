<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background_Color1"
    tools:context=".LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@color/newThemeColorPrimaryDark"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#fff"
        android:text="Welcome to Miriad"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="A customized trivia app specifically designed for your own favourite TV shows and sitcoms. Join the Club today!"
        android:textSize="15sp"
        android:layout_marginTop="25dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">
        <Button
            android:backgroundTint="@color/newThemeDarkPink"
            android:padding="15dp"
            android:textColor="#fff"
            app:cornerRadius="25dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="Learn More"/>
        <Button
            android:backgroundTint="@color/newThemeColorPrimaryDark"
            android:layout_width="wrap_content"
            app:strokeColor="#fff"
            app:strokeWidth="2dp"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:padding="15dp"
            android:id="@+id/jointheclub"
            app:cornerRadius="25dp"
            android:layout_height="match_parent"
            android:text="Join the club"/>
    </LinearLayout>
</LinearLayout>
        <!-- Snippet from "Add text fields" section goes here. -->

        <!-- Snippet from "Add buttons" section goes here. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:id="@+id/mainLayout"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/signupLayout"
                android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/Primary_Color1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:elevation="0dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_person_outline_black_24dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/firstname_text_input"
                    style="@style/Widget.Miriad.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    android:hint="First Name">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/firstname_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text=""
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/Primary_Color1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:elevation="0dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_person_outline_black_24dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lastname_text_input"
                    style="@style/Widget.Miriad.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    android:hint="Last Name">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lastname_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text=""
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/Primary_Color1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:elevation="0dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_person_outline_black_24dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/username_text_input"
                    style="@style/Widget.Miriad.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    android:hint="Choose Username">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/username_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text=""
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/Primary_Color1"
                 android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:elevation="0dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_email_black_24dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_text_input"
            style="@style/Widget.Miriad.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:hint="Email">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/signupLayout1"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/Primary_Color1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:elevation="0dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_phone_black_24dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phoneno_text_input"
                    style="@style/Widget.Miriad.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    android:hint="Phone Number">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneno_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text=""
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/Primary_Color1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:elevation="0dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_lock_outline_black_24dp"/>
                <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_text_input"
                    style="@style/Widget.Miriad.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/mrd_hint_password"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_edit_text"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/signupLayout2"

                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/Primary_Color1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:elevation="0dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_lock_outline_black_24dp"/>
                <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_reenter_text_input"

                    style="@style/Widget.Miriad.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    android:hint="Re-enter Password"

            app:errorEnabled="true"
            app:passwordToggleEnabled="true" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_reenter_edit_text"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:text="Password"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/errorReporter"
            android:text="Error"
            android:textColor="#FF0000"
            android:textSize="14dp"
            android:visibility="invisible"
            android:gravity="center"

            />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="4dp"
            android:visibility="gone"
            android:layout_weight="1" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="14dp"
            android:paddingRight="25dp"
            android:paddingBottom="10dp"
            android:id="@+id/buttonLayout"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/next_button"
                android:text="Login"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/newThemeColorPrimaryDark"
                android:elevation="0dp"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:padding="15dp"
                app:cornerRadius="5dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/next_button"
                android:id="@+id/reset_button"
                android:text="Reset"
                android:elevation="0dp"
                android:layout_toLeftOf="@+id/next_button"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#fff"
                app:strokeColor="@color/newThemeColorPrimaryDark"
                app:strokeWidth="2dp"

                android:textColor="@color/newThemeColorPrimaryDark"
                android:padding="15dp"
                app:cornerRadius="5dp"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>

